
<div class="container">

    <div class="row justify-content-center">
        <h3>Gallery</h3>
    </div>
    <div class="row justify-content-center">
        <%= link_to 'People', '#people-gallery' %><span>/</span>
        <%= link_to 'Animals', '#animals-gallery' %><span>/</span>
        <%= link_to 'Others', '#others-gallery' %>
    </div>



        <%= flash[:notice] %>



        <% @pictures.each do |picture| %>
            <% if picture.image.attached? %>
                <%= link_to image_tag(picture.image, size: "200x200"), picture_path(picture.id) %>
            <% else %>
                <%= link_to image_tag('no_image', size: "200x200"), picture_path(picture.id) %>
            <% end %>
        <% end %>

      <div class="row justify-content-center">
        <p id="people-gallery">People</p>
      </div>
        <% @pictures.each do |picture| %>
          <% if picture.genre_id == 1 %>
              <% if picture.image.attached? %>
                  <%= link_to image_tag(picture.image, size: "200x200"), picture_path(picture.id) %>
              <% else %>
                  <%= link_to image_tag('no_image', size: "200x200"), picture_path(picture.id) %>
              <% end %>
            <% end %>
          <% end %>

      <div class="row justify-content-center">
        <p id="animals-gallery">Animals</p>
      </div>
        <% @pictures.each do |picture| %>
          <% if picture.genre_id == 2 %>
            <% if picture.image.attached? %>
                <%= link_to image_tag(picture.image, size: "200x200"), picture_path(picture.id) %>
            <% else %>
                <%= link_to image_tag('no_image', size: "200x200"), picture_path(picture.id) %>
            <% end %>
          <% end %>
        <% end %>

      <div class="row justify-content-center">
        <p id="others-gallery">Others</p>
      </div>
        <% @pictures.each do |picture| %>
          <% if picture.genre_id == 3 %>
            <% if picture.image.attached? %>
                <%= link_to image_tag(picture.image, size: "200x200"), picture_path(picture.id) %>
            <% else %>
                <%= link_to image_tag('no_image', size: "200x200"), picture_path(picture.id) %>
            <% end %>
          <% end %>
        <% end %>
</div>
