
    <div class="container">
        <div class="row justify-content-center">
            <% if @picture.image.attached? %>
                <%= link_to image_tag(@picture.image, size: "400x400") %>
            <% else %>
                <%= link_to image_tag('no_image', size: "400x400") %>
            <% end %>
        </div>

        <div class="row justify-content-center">
            <span>「</span><%= @picture.name %><span>」</span>
            <%= @picture.introduction %>
        </div>

        <div class="row justify-content-center mt-2">
            <%= link_to pictures_path do %>
                <i class="fa-solid fa-angle-left"></i> galleryに戻る
            <% end %>
        </div>
    </div>
